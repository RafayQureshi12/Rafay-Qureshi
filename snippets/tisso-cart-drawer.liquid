  right: 0;
}

/* Header */
.tisso-cart-drawer__header {
  padding: 20px;
  border-bottom: 1px solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tisso-cart-drawer__title {
  margin: 0;
  font-size: 18px;
  font-weight: 600;
}

.tisso-cart-drawer__close {
  background: none;
  border: none;
  font-size: 24px;
  cursor: pointer;
  padding: 0;
  width: 30px;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #000;
}

/* Items */
.tisso-cart-drawer__items {
  flex: 1;
  overflow-y: auto;
  padding: 20px;
