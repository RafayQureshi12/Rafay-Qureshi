<script>
// Tisso Cart Drawer Script
(function() {
  'use strict';
  
  console.log('ðŸ›’ Tisso Cart Drawer Loading...');
  
  // Initialize cart
  function initCart() {
    const cartDrawer = document.getElementById('tisso-cart-drawer');
    
    if (!cartDrawer) {
      console.error('Cart drawer element not found!');
      return;
    }
    
    console.log('Cart drawer found, initializing...');
    
    const closeBtn = document.getElementById('tisso-cart-close');
    const overlay = cartDrawer.querySelector('.tisso-cart-drawer__overlay');
    
    // Open cart function
    window.openTissoCart = function() {
      console.log('Opening cart...');
      cartDrawer.classList.add('active');
      document.body.style.overflow = 'hidden';
      loadCart();
    };
    
    // Close cart function
    function closeCart() {
      console.log('Closing cart...');
      cartDrawer.classList.remove('active');
      document.body.style.overflow = '';
    }
    
    // Event listeners
    if (closeBtn) {
      closeBtn.addEventListener('click', closeCart);
    }
    
    if (overlay) {
      overlay.addEventListener('click', closeCart);
    }
    
    // Escape key to close
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && cartDrawer.classList.contains('active')) {
        closeCart();
      }
    });
    
    // Remove item from cart
    async function removeItem(line) {
      try {
        const response = await fetch('/cart/change.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            id: line,
            quantity: 0
          })
        });
        
        const cart = await response.json();
        console.log('Item removed, cart updated:', cart);
        
        // Refresh cart display
        loadCart();
        
        // Dispatch event to notify other components
        const event = new CustomEvent('tisso:cart-updated', {
          detail: { action: 'removed', line: line }
        });
        document.dispatchEvent(event);
        
      } catch (error) {
        console.error('Error removing item:', error);
      }
    }
    
    // Load cart data
    async function loadCart() {
      console.log('Loading cart data...');
      const itemsEl = document.getElementById('tisso-cart-items');
      const totalEl = document.getElementById('tisso-cart-total');
      
      try {
        const response = await fetch('/cart.js');
        const cart = await response.json();
        
        // Update total
        if (totalEl) {
          totalEl.textContent = 'â‚¬' + (cart.total_price / 100).toFixed(2);
        }
        
        // Update items
        if (itemsEl) {
          if (!cart.items || cart.items.length === 0) {
            itemsEl.innerHTML = '<div class="tisso-cart-empty"><p>Your cart is empty</p></div>';
            return;
          }
          
          let itemsHTML = '';
          
          cart.items.forEach(item => {
            const imageUrl = item.image || '//cdn.shopify.com/s/files/1/placeholder_120x.png?height=100&width=80';
            
            itemsHTML += `
              <div class="tisso-cart-item">
                <img src="${imageUrl}" alt="${item.title}" class="tisso-cart-item__image">
                <div class="tisso-cart-item__details">
                  <p class="tisso-cart-item__title">${item.product_title}</p>
                  <p class="tisso-cart-item__variant">${item.variant_title || 'Default'}</p>
                  <p class="tisso-cart-item__quantity">Quantity: ${item.quantity}</p>
                  <p class="tisso-cart-item__price">â‚¬${(item.line_price / 100).toFixed(2)}</p>
                </div>
                <button class="tisso-cart-item__remove" data-line="${item.id}">Remove</button>
              </div>
            `;
          });
          
          itemsEl.innerHTML = itemsHTML;
          
          // Add event listeners to remove buttons
          itemsEl.querySelectorAll('.tisso-cart-item__remove').forEach(button => {
            button.addEventListener('click', function() {
              const lineId = this.getAttribute('data-line');
              removeItem(lineId);
            });
          });
        }
        
      } catch (error) {
        console.error('Error loading cart:', error);
        if (itemsEl) {
          itemsEl.innerHTML = '<div class="tisso-cart-empty"><p>Error loading cart</p></div>';
        }
      }
    }
    
    // Listen for cart update events
    document.addEventListener('tisso:cart-updated', function(e) {
      console.log('Received tisso:cart-updated event', e);
      openTissoCart();
    });
    
    // Also listen to Shopify events
    document.addEventListener('cart:updated', function(e) {
      console.log('Received Shopify cart:updated event', e);
      openTissoCart();
    });
    
    // Make cart functions globally available
    window.tissoCart = {
      open: window.openTissoCart,
      close: closeCart,
      refresh: loadCart
    };
    
    console.log('âœ… Tisso Cart Drawer Initialized');
  }
  
  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initCart);
  } else {
    initCart();
  }
})();
</script>