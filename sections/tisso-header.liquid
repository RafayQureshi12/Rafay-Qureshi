<header class="tisso-header">
  <div class="header-inner">
    <span class="logo">{{ section.settings.logo_text }}</span>

    <p class="tagline">{{ section.settings.tagline }}</p>

    <a href="{{ section.settings.button_link }}" class="header-btn">
      {{ section.settings.button_text }} â†’
    </a>
  </div>
</header>

<style>
.tisso-header {
  padding: 16px 20px;
  border-bottom: 1px solid #eee;
}

.header-inner {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-btn {
  background: #ffd400;
  padding: 10px 18px;
  color: black;
  text-decoration: none;
  transition: background 0.3s;
}

.header-btn:hover {
  background: black;
  color: white;
}
</style>

{% schema %}
{
  "name": "Tisso Header",
  "settings": [
    { "type": "text", "id": "logo_text", "label": "Logo text", "default": "TISSO VISION" },
    { "type": "text", "id": "tagline", "label": "Tagline", "default": "Find the ideal gift for your loved ones." },
    { "type": "text", "id": "button_text", "label": "Button text", "default": "CHOOSE GIFT" },
    { "type": "url", "id": "button_link", "label": "Button link" }
  ],
  "presets": [{ "name": "Tisso Header" }]
}
{% endschema %}
