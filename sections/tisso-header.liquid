<style>
.tisso-header {
  padding: 16px 20px;
  border-bottom: 1px solid #F5F5F5;
  background: white;
  position: relative;
}

.header-inner {
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1440px;
  margin: 0 auto;
}

.logo {
  font-weight: {{ section.settings.logo_font_weight }};
  font-size: {{ section.settings.logo_font_size }}px;
  letter-spacing: {{ section.settings.logo_letter_spacing }}px;
  color: {{ section.settings.logo_color }};
}

.tagline {
  margin: 0;
  font-size: {{ section.settings.tagline_font_size }}px;
  color: {{ section.settings.tagline_color }};
  flex: 1;
  text-align: center;
  padding: 0 20px;
}

/* Hamburger Menu - Hidden on Desktop */
.hamburger-menu {
  display: none;
  flex-direction: column;
  gap: 4px;
  background: transparent;
  border: none;
  cursor: pointer;
  padding: 8px;
  z-index: 100;
}

.hamburger-menu span {
  width: 22px;
  height: 2px;
  background: {{ section.settings.hamburger_color }};
  transition: all 0.3s ease;
  display: block;
}

.hamburger-menu:hover span {
  background: {{ section.settings.hamburger_hover_color }};
}

{% comment %}The hover animation {% endcomment %}
.header-btn {
  background: {{ section.settings.button_bg_color }};
  padding: {{ section.settings.button_padding_v }}px {{ section.settings.button_padding_h }}px;
  color: {{ section.settings.button_text_color }};
  text-decoration: none;
  transition: background 0.3s, color 0.3s;
  border-radius: {{ section.settings.button_border_radius }}px;
  font-size: {{ section.settings.button_font_size }}px;
  font-weight: {{ section.settings.button_font_weight }};
  white-space: nowrap;
}

.header-btn:hover {
  background: {{ section.settings.button_hover_bg_color }};
  color: {{ section.settings.button_hover_text_color }};
}

/* Mobile Styles */
@media (max-width: 768px) {
  .tisso-header {
    padding: 12px 16px;
  }

  .header-inner {
    justify-content: center;
    position: relative;
  }

  /* Show hamburger menu on mobile */
  .hamburger-menu {
    display: flex;
    position: absolute;
    left: 16px;
    top: 50%;
    transform: translateY(-50%);
  }

  /* Center logo on mobile */
  .logo {
    font-size: {{ section.settings.logo_mobile_size }}px;
    text-align: center;
  }

  /* Hide tagline and button on mobile */
  .tagline,
  .header-btn {
    display: none;
  }
}
</style>

<script>
(function() {
  'use strict';
  
  // Hamburger menu functionality
  const hamburger = document.querySelector('.hamburger-menu');
  
  if (hamburger) {
    hamburger.addEventListener('click', function() {
      // Toggle menu open/closed
      this.classList.toggle('active');
      
      // Add animation to hamburger
      const spans = this.querySelectorAll('span');
      if (this.classList.contains('active')) {
        spans[0].style.transform = 'rotate(45deg) translateY(6px)';
        spans[1].style.opacity = '0';
        spans[2].style.transform = 'rotate(-45deg) translateY(-6px)';
      } else {
        spans[0].style.transform = 'none';
        spans[1].style.opacity = '1';
        spans[2].style.transform = 'none';
      }
      
      // Trigger custom event for mobile menu
      const event = new CustomEvent('tisso-mobile-menu-toggle', {
        detail: { isOpen: this.classList.contains('active') }
      });
      document.dispatchEvent(event);
    });
  }
})();
</script>

