<section class="tisso-banner">

  <div class="frame frame-one"></div>
  <div class="frame frame-two"></div>

  <div class="content-card">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.description }}</p>

    <a href="{{ section.settings.button_link }}" class="card-btn">
      {{ section.settings.button_text }} â†’
    </a>
  </div>

</section>

<style>
.tisso-banner {
  position: relative;
  padding: 100px 20px;
}

.frame {
  position: absolute;
  inset: 0;
  background-image: url({{ section.settings.background | image_url }});
  background-size: cover;
}

.frame-two {
  transform: translateY(40px);
  opacity: 0.8;
}

.content-card {
  position: relative;
  background: white;
  max-width: 420px;
  padding: 40px;
}

.card-btn {
  background: black;
  color: white;
  padding: 12px 20px;
  display: inline-block;
  transition: background 0.3s;
}

.card-btn:hover {
  background: #ffd400;
  color: black;
}
</style>

{% schema %}
{
  "name": "Tisso Banner",
  "settings": [
    { "type": "image_picker", "id": "background", "label": "Background image" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "The Gift Guide" },
    { "type": "textarea", "id": "description", "label": "Description" },
    { "type": "text", "id": "button_text", "label": "Button text", "default": "SHOP NOW" },
    { "type": "url", "id": "button_link", "label": "Button link" }
  ],
  "presets": [{ "name": "Tisso Banner" }]
}
{% endschema %}
