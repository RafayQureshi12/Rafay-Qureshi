        {% if section.settings.frame3_button_text != blank %}
          <a href="{{ section.settings.frame3_button_link }}" class="tisso-cta-button">
            {{ section.settings.frame3_button_text }}
            <span class="button-arrow">‚Üí</span>
          </a>
        {% endif %}
      </div>
    </div>

    {% comment %} Frame 1 - Top (No Border) {% endcomment %}
    <div class="tisso-frame-1 tisso-animate-fade-in" data-animation-delay="0">
      {% if section.settings.frame1_image %}
        <img 
          src="{{ section.settings.frame1_image | img_url: 'master' }}" 
          alt="{{ section.settings.frame1_image_alt }}"
