{% comment %}
  Tisso Banner Frames Section
  Three seamless frames without borders
  Frame 1: Top - Product flatlay
  Frame 2: Bottom right - Product details
  Frame 3: Bottom left - Gift Guide CTA
{% endcomment %}

<style>
  .tisso-banner-container {
    max-width: 100%;
    margin: 0 auto;
    padding: {{ section.settings.section_padding }}px 20px;
    background-color: {{ section.settings.background_color }};
  }

  .tisso-frames-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: auto auto;
    gap: 0px;
    max-width: 1440px;
    margin: 0 auto;
  }

  /* Frame 3 - No border (bottom left - Gift Guide) */
  .tisso-frame-3 {
    grid-column: 1;
    grid-row: 2;
    padding: {{ section.settings.frame_padding }}px;
    background-color: {{ section.settings.frame3_bg_color }};
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    min-height: 402px;
  }

  /* Frame 1 - No border (spans full width at top) */
  /* Desktop: 1440px width x 390px height */
  .tisso-frame-1 {
    grid-column: 1 / -1;
    grid-row: 1;
    padding: 0;
    background-color: {{ section.settings.frame1_bg_color }};
    overflow: hidden;
    position: relative;
    width: 100%;
    max-width: 1440px;
    height: 390px;
  }

  /* Frame 2 - No border (bottom right - Product details) */
  /* Desktop: 890px width x 402px height */
  .tisso-frame-2 {
    grid-column: 2;
    grid-row: 2;
    padding: 0;
    background-color: {{ section.settings.frame2_bg_color }};
    overflow: hidden;
    position: relative;
    width: 100%;
    max-width: 890px;
    height: 402px;
  }

  /* Frame content styling */
  .frame-image {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
    object-position: center;
  }

  .tisso-frame-1 .frame-image {
    height: 390px;
  }

  .tisso-frame-2 .frame-image {
    height: 402px;
  }

  .frame-3-content {
    z-index: 2;
    position: relative;
  }

  .frame-3-title {
    font-size: {{ section.settings.frame3_title_size }}px;
    font-weight: {{ section.settings.frame3_title_weight }};
    color: {{ section.settings.frame3_title_color }};
    margin-bottom: 15px;
    line-height: 1.2;
  }

  .frame-3-description {
    font-size: {{ section.settings.frame3_desc_size }}px;
    color: {{ section.settings.frame3_desc_color }};
    margin-bottom: 25px;
    line-height: {{ section.settings.frame3_desc_line_height }};
    max-width: 90%;
  }

  .frame-3-description p {
    margin: 0;
  }

  /* Button styling with hover animation */
  .tisso-cta-button {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: {{ section.settings.button_padding_v }}px {{ section.settings.button_padding_h }}px;
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    border-radius: {{ section.settings.button_border_radius }}px;
    border: none;
    cursor: pointer;
    transition: background 0.3s ease, color 0.3s ease, transform 0.3s ease;
    position: relative;
  }

  .tisso-cta-button:hover {
    background-color: {{ section.settings.button_hover_bg_color }};
    color: {{ section.settings.button_hover_text_color }};
    transform: translateY(-2px);
  }

  .button-arrow {
    transition: transform 0.3s ease;
    font-size: 16px;
  }

  .tisso-cta-button:hover .button-arrow {
    transform: translateX(5px);
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .tisso-banner-container {
      padding: 0;
      background: white;
    }

    .tisso-frames-wrapper {
      grid-template-columns: 1fr;
      grid-template-rows: auto;
      position: relative;
      background: white;
      min-height: 600px;
    }

    /* Frame 3 - Text content on white background at top */
    .tisso-frame-3 {
      display: flex;
      position: relative;
      grid-column: 1;
      grid-row: 1;
      background: white;
      z-index: 20;
      padding: 30px 20px;
      justify-content: center;
      align-items: center;
      text-align: center;
      min-height: auto;
    }

    .frame-3-content {
      max-width: 90%;
    }

    .frame-3-title {
      font-size: {{ section.settings.frame3_title_mobile_size }}px;
      color: {{ section.settings.frame3_title_mobile_color }};
      margin-bottom: 10px;
    }

    .frame-3-description {
      font-size: {{ section.settings.frame3_desc_mobile_size }}px;
      color: {{ section.settings.frame3_desc_mobile_color }};
      max-width: 100%;
      margin-bottom: 20px;
      line-height: 1.4;
    }

    /* Frame 1 - Image positioned below text with specific positioning */
    .tisso-frame-1 {
      position: absolute;
      width: 686px;
      height: 264px;
      top: 20px;
      left: -140px;
      opacity: 1;
      transform: rotate(0deg);
      overflow: visible;
      padding: 0;
      grid-column: 1;
      grid-row: 1;
      z-index: 10;
    }

    .tisso-frame-1 .frame-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center;
    }

    /* Hide Frame 2 on mobile */
    .tisso-frame-2 {
      display: none;
    }

    .bottom-text {
      font-size: 10px !important;
      padding: 10px 5px;
    }

    /* Ensure button is visible on mobile */
    .tisso-cta-button {
      font-size: {{ section.settings.button_mobile_size }}px;
      padding: {{ section.settings.button_mobile_padding_v }}px {{ section.settings.button_mobile_padding_h }}px;
    }

    /* Ensure wrapper has enough height for absolutely positioned image */
    .tisso-frames-wrapper::after {
      content: '';
      display: block;
      height: 300px;
    }
  }

  /* Bottom Text Banner */
  .tisso-bottom-text-banner {
    text-align: center;
    padding: {{ section.settings.bottom_text_padding }}px 20px;
    background-color: {{ section.settings.bottom_text_bg_color }};
    margin-top: 10px;
  }

  .bottom-text {
    font-size: {{ section.settings.bottom_text_size }}px;
    color: {{ section.settings.bottom_text_color }};
    margin: 0;
    letter-spacing: 0.5px;
    text-transform: {{ section.settings.bottom_text_transform }};
  }

  /* Animation classes for JavaScript */
  .tisso-animate-fade-in {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }

  .tisso-animate-fade-in.visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<div class="tisso-banner-container" id="tisso-banner-{{ section.id }}">
