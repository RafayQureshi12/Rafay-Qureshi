<style>
  .tisso-banner-container {
    max-width: 100%;
    margin: 0 auto;
    padding: {{ section.settings.section_padding }}px 20px;
    background-color: {{ section.settings.background_color }};
  }

  .tisso-frames-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: auto auto;
    gap: 0px;
    max-width: 1440px;
    margin: 0 auto;
  }

  /* Frame 3 - No border (bottom left - Gift Guide) */
  .tisso-frame-3 {
    grid-column: 1;
    grid-row: 2;
    padding: {{ section.settings.frame_padding }}px;
    background-color: {{ section.settings.frame3_bg_color }};
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    min-height: 402px;
  }

  /* Frame 1 - No border (spans full width at top) */
  .tisso-frame-1 {
    grid-column: 1 / -1;
    grid-row: 1;
    padding: 0;
    background-color: {{ section.settings.frame1_bg_color }};
    overflow: hidden;
    position: relative;
    width: 100%;
    max-width: 1440px;
    height: 390px;
  }

  /* Frame 2 - No border (bottom right - Product details) */
  .tisso-frame-2 {
    grid-column: 2;
    grid-row: 2;
    padding: 0;
    background-color: {{ section.settings.frame2_bg_color }};
    overflow: hidden;
    position: relative;
    width: 100%;
    max-width: 890px;
    height: 402px;
  }

  /* Frame content styling */
  .frame-image {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
    object-position: center;
  }

  .tisso-frame-1 .frame-image {
    height: 390px;
  }

  .tisso-frame-2 .frame-image {
    height: 402px;
  }

  .frame-3-content {
    z-index: 2;
    position: relative;
  }

  .frame-3-title {
    font-size: {{ section.settings.frame3_title_size }}px;
    font-weight: {{ section.settings.frame3_title_weight }};
    color: {{ section.settings.frame3_title_color }};
    margin-bottom: 15px;
    line-height: 1.2;
  }

  /* Desktop description - visible by default */
  .frame-3-description-desktop {
    font-size: {{ section.settings.frame3_desc_size }}px;
    color: {{ section.settings.frame3_desc_color }};
    margin-bottom: 25px;
    line-height: {{ section.settings.frame3_desc_line_height }};
    max-width: 90%;
    display: block;
  }

  /* Mobile description - hidden by default */
  .frame-3-description-mobile {
    display: none;
  }

  .frame-3-description p {
    margin: 0;
  }

  /* Button styling with hover animation */
  .tisso-cta-button {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: {{ section.settings.button_padding_v }}px {{ section.settings.button_padding_h }}px;
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    border-radius: {{ section.settings.button_border_radius }}px;
    border: none;
    cursor: pointer;
    transition: background 0.3s ease, color 0.3s ease, transform 0.3s ease;
    position: relative;
  }

  .tisso-cta-button:hover {
    background-color: {{ section.settings.button_hover_bg_color }};
    color: {{ section.settings.button_hover_text_color }};
    transform: translateY(-2px);
  }

  .button-arrow {
    transition: transform 0.3s ease;
    font-size: 16px;
  }

  .tisso-cta-button:hover .button-arrow {
    transform: translateX(5px);
  }

  /* ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
     MOBILE VIEW - FIXED LAYOUT + SEPARATE CONTENT
  ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ */
  @media (max-width: 768px) {
    .tisso-banner-container {
      padding: 0;
      background: white;
    }

    .tisso-frames-wrapper {
      display: flex;
      flex-direction: column;
      gap: 0;
      background: white;
    }

    /* Frame 3 - Text content at top */
    .tisso-frame-3 {
      order: 1;
      background: white;
      padding: 40px 24px 30px;
      display: flex;
      justify-content: center;
      align-items: center;
      text-align: center;
      min-height: auto;
    }

    .frame-3-content {
      max-width: 480px;
      width: 100%;
    }

    .frame-3-title {
      font-size: {{ section.settings.frame3_title_mobile_size }}px;
      color: {{ section.settings.frame3_title_mobile_color }};
      margin-bottom: 16px;
      line-height: 1.15;
    }

    /* Hide desktop description on mobile */
    .frame-3-description-desktop {
      display: none;
    }

    /* Show mobile description on mobile */
    .frame-3-description-mobile {
      display: block;
      font-size: {{ section.settings.frame3_desc_mobile_size }}px;
      color: {{ section.settings.frame3_desc_mobile_color }};
      max-width: 100%;
      margin-bottom: 28px;
      line-height: 1.5;
    }

    /* Frame 1 - Image below text - FIXED */
    .tisso-frame-1 {
      order: 2;
      width: 100%;
      height: auto;
      max-width: 100%;
      margin: 0;
      padding: 0 20px;
      overflow: visible;
      background: white;
    }

    .tisso-frame-1 .frame-image {
      width: 100%;
      height: auto;
      max-height: 500px;
      object-fit: contain;
      object-position: center;
      display: block;
    }

    /* Hide Frame 2 on mobile */
    .tisso-frame-2 {
      display: none;
    }

    /* Button improvements */
    .tisso-cta-button {
      font-size: {{ section.settings.button_mobile_size }}px;
      padding: {{ section.settings.button_mobile_padding_v }}px {{ section.settings.button_mobile_padding_h }}px;
      min-width: 180px;
      justify-content: center;
    }
  }

  /* Bottom Text Banner */
  .tisso-bottom-text-banner {
    text-align: center;
    padding: {{ section.settings.bottom_text_padding }}px 20px;
    background-color: {{ section.settings.bottom_text_bg_color }};
    margin-top: 20px;
  }

  /* Desktop bottom text - visible by default */
  .bottom-text-desktop {
    font-size: {{ section.settings.bottom_text_size }}px;
    color: {{ section.settings.bottom_text_color }};
    margin: 0;
    letter-spacing: 0.5px;
    text-transform: {{ section.settings.bottom_text_transform }};
    display: block;
  }

  /* Mobile bottom text - hidden by default */
  .bottom-text-mobile {
    display: none;
  }

  /* Mobile bottom text styling */
  @media (max-width: 768px) {
    .bottom-text-desktop {
      display: none;
    }

    .bottom-text-mobile {
      display: block;
      font-size: {{ section.settings.bottom_text_mobile_size }}px;
      color: {{ section.settings.bottom_text_mobile_color }};
      margin: 0;
      letter-spacing: 0.5px;
      text-transform: {{ section.settings.bottom_text_mobile_transform }};
    }
  }

  /* Animation classes */
  .tisso-animate-fade-in {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }

  .tisso-animate-fade-in.visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<div class="tisso-banner-container" id="tisso-banner-{{ section.id }}">
  <div class="tisso-frames-wrapper">
    
    {% comment %} Frame 3 - Gift Guide {% endcomment %}
    <div class="tisso-frame-3 tisso-animate-fade-in" data-animation-delay="200">
      <div class="frame-3-content">
        {% if section.settings.frame3_title != blank %}
          <h2 class="frame-3-title">{{ section.settings.frame3_title }}</h2>
        {% endif %}
        
        {% comment %} Desktop Description {% endcomment %}
        {% if section.settings.frame3_description_desktop != blank %}
          <div class="frame-3-description frame-3-description-desktop">
            {{ section.settings.frame3_description_desktop }}
          </div>
        {% endif %}
        
        {% comment %} Mobile Description {% endcomment %}
        {% if section.settings.frame3_description_mobile != blank %}
          <div class="frame-3-description frame-3-description-mobile">
            {{ section.settings.frame3_description_mobile }}
          </div>
        {% endif %}
        
        {% if section.settings.frame3_button_text != blank %}
          <a href="{{ section.settings.frame3_button_link }}" class="tisso-cta-button">
            {{ section.settings.frame3_button_text }}
            <span class="button-arrow">‚Üí</span>
          </a>
        {% endif %}
      </div>
    </div>

    {% comment %} Frame 1 - Top Image {% endcomment %}
    <div class="tisso-frame-1 tisso-animate-fade-in" data-animation-delay="0">
      {% if section.settings.frame1_image %}
        <img 
          src="{{ section.settings.frame1_image | img_url: 'master' }}" 
          alt="{{ section.settings.frame1_image_alt }}"
          class="frame-image"
          loading="lazy"
        >
      {% else %}
        <div style="background: #f0f0f0; height: 300px; display: flex; align-items: center; justify-content: center; color: #999;">
          Frame 1 - Product Flatlay Image
        </div>
      {% endif %}
    </div>

