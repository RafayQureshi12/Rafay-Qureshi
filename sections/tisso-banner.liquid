      {% endif %}
    </div>

    {% comment %} Frame 2 - Bottom Right (No Border) {% endcomment %}
    <div class="tisso-frame-2 tisso-animate-fade-in" data-animation-delay="400">
      {% if section.settings.frame2_image %}
        <img 
          src="{{ section.settings.frame2_image | img_url: 'master' }}" 
